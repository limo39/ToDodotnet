@model TodoApp.Models.TodoItem

<h1>Edit Task</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label for="title">Task Title</label>
        <input asp-for="Title" id="title" />
    </div>
    <button type="submit">Save Changes</button>
</form>
